# Configuration d'environnement pour Component Data Processor
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Sécurité
SECRET_KEY=your-secret-key-here-change-this-in-production

# Performance
PROCESSING_TIMEOUT=300
MAX_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Fichiers
UPLOAD_MAX_SIZE=104857600
MASTER_BOM_PATH=Master_BOM.xlsx
OUTPUT_DIR=output

# Base de données (optionnel)
# DATABASE_URL=sqlite:///component_processor.db

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Développement
DEBUG=false
FLASK_ENV=production
